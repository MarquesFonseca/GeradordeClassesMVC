<td>@Html.DisplayFor(modelItem => item.CampoUm)</td>
<td>@Html.DisplayFor(modelItem => item.CampoDois)</td>
<td>@Html.DisplayFor(modelItem => item.CampoTres)</td>
<td>@Html.DisplayFor(modelItem => item.CampoQuatro)</td>
